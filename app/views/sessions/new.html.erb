<div class="auth-form">
  <h2 class="text-center mb-4">Login</h2>

  <%= simple_form_for :session, url: login_path do |f| %>
    <%= f.input :email, 
                label: 'E-mail',
                input_html: { class: 'form-control' },
                wrapper_html: { class: 'mb-3' } %>
                
    <%= f.input :password, 
                label: 'Senha',
                input_html: { class: 'form-control' },
                wrapper_html: { class: 'mb-3' } %>
    
    <div class="d-grid gap-2 mt-4">
      <%= f.button :submit, "Entrar", class: 'btn btn-primary' %>
    </div>
  <% end %>
  
  <div class="text-center mt-3">
    <p>NÃ£o tem uma conta? <%= link_to "Cadastre-se", signup_path %></p>
  </div>
</div>